@model Parking.Models.PriceTableViewModel

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cadastro de Preços</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="d-flex justify-content-between align-items-center p-3 bg-dark text-white">
        <div class="d-flex align-items-center">
            <img src="~/images/logo.jpg" alt="Logo" class="me-3" />
            <div>
                <h1>Estacionamento</h1>
                <h2>Carro Bem Guardado</h2>
            </div>
        </div>
        <div class="d-flex flex-column align-items-end">
            <p id="date-time" class="me-3"></p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-light">Voltar</a>
        </div>
    </header>

    <div class="container mt-4">
        <h2 class="text-primary">Cadastro de Preços</h2>
        @await Html.PartialAsync("~/Views/PriceTables/_PriceForm.cshtml", Model.NewPrice)

        @await Html.PartialAsync("~/Views/PriceTables/_PriceTable.cshtml", Model.PriceTables)
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        function updateDateTime() {
            const now = new Date();
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit', second: '2-digit' };
            document.getElementById('date-time').textContent = now.toLocaleDateString('pt-BR', options);
        }
        setInterval(updateDateTime, 1000);
        updateDateTime();
    </script>
</body>
</html>
