@model Parking.Models.VehicleRegistration

@{
	ViewData["Title"] = "Criar Registro de Veículo";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header class="d-flex justify-content-between align-items-center p-3">
		<div class="d-flex align-items-center">
			<img src="~/images/logo.jpg" alt="Logo" class="me-3" />
			<div>
				<h1>Estacionamento</h1>
				<h2>Carro Bem Guardado</h2>
			</div>
		</div>
	</header>

	<div class="container mt-4">
		<h1>Criar Registro de Veículo</h1>

		<form method="post" action="@Url.Action("CreateEntry", "VehicleRegistrations")">
			<div class="form-group">
				<label asp-for="LicensePlate" class="control-label">Placa do Veículo</label>
				<input asp-for="LicensePlate" class="form-control" name="LicensePlate" />
				<span asp-validation-for="LicensePlate" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Enter" class="control-label">Horário de Chegada</label>
				<input asp-for="Enter" class="form-control" type="datetime-local" name="Enter" />
				<span asp-validation-for="Enter" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Exit" class="control-label">Horário de Saída</label>
				<input asp-for="Exit" class="form-control" type="datetime-local" name="Exit" />
				<span asp-validation-for="Exit" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="AmountCharged" class="control-label">Valor a Pagar</label>
				<input asp-for="AmountCharged" class="form-control" type="number" step="0.01" name="AmountCharged" />
				<span asp-validation-for="AmountCharged" class="text-danger"></span>
			</div>

			<div class="form-group mt-3">
				<input type="submit" value="Criar" class="btn btn-primary" />
				<a href="@Url.Action("Index", "Home")" class="btn btn-secondary ms-2">Voltar</a>
			</div>
		</form>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js"></script>
</body>
</html>
